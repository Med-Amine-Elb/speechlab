{
  "info": {
    "name": "minutes-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b4d3a8c1-2b3e-4d2d-9e8e-111111111111"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/actuator/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "actuator",
            "health"
          ]
        }
      }
    },
    {
      "name": "Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/actuator/info",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "actuator",
            "info"
          ]
        }
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"plan\": \"premium\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.token) { pm.variables.set('token', json.token); pm.collectionVariables.set('token', json.token); pm.environment.set('token', json.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Upload Audio",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const json = pm.response.json();",
              "  if (json && json.recordId) { pm.variables.set('recordId', json.recordId); pm.collectionVariables.set('recordId', json.recordId); pm.environment.set('recordId', json.recordId); }",
              "} catch(e) { }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/audio",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "audio"
          ]
        }
      }
    },
    {
      "name": "Get Meeting by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/meetings/{{recordId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "meetings",
            "{{recordId}}"
          ]
        }
      }
    },
    {
      "name": "List Meetings",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/meetings",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "meetings"
          ]
        }
      }
    },
    {
      "name": "Download PDF (by id)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/pdf/{{recordId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "pdf",
            "{{recordId}}"
          ]
        }
      }
    },
    {
      "name": "Live Recording - Start",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/live/start",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "live",
            "start"
          ]
        },
        "description": "Start a live recording session. Returns a session ID for tracking."
      }
    },
    {
      "name": "Live Recording - Send Audio Chunk (JSON)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"audioData\": \"base64_encoded_audio_data_here\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/live/chunk",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "live",
            "chunk"
          ]
        },
        "description": "Send base64 encoded audio data for processing. Replace 'base64_encoded_audio_data_here' with actual base64 audio data."
      }
    },
    {
      "name": "Live Recording - Send Audio Chunk (File)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/live/upload-chunk",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "live",
            "upload-chunk"
          ]
        },
        "description": "Upload audio file directly for processing. Easier than base64 encoding."
      }
    },
    {
      "name": "Live Recording - Stop",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/live/stop",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "live",
            "stop"
          ]
        },
        "description": "Stop the recording session and get final transcript and summary."
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
